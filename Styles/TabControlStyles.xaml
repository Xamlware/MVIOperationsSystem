<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sf="http://schemas.syncfusion.com/wpf">

	<Style x:Key="MVITabControlStyle" TargetType="{x:Type sf:TabControlExt}">
		<Setter Property="Background" Value="{StaticResource LightestBackgroundColorBrush }"/>
		<Setter Property="BorderBrush" Value="{StaticResource DarkBackgroundColorBrush }"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="ShowTabItemContextMenu" Value="False"/>
		<Setter Property="CloseButtonType" Value="Individual"/>
		<Setter Property="CollapseDefaultTabListContextMenuItems" Value="True"/>
		<Setter Property="ShowTabListContextMenu" Value="False"/>
		<Setter Property="TabItemSelectedForeground" Value="{StaticResource LightForegroundColorBrush}"/>
		<Setter Property="TabItemSelectedBackground" Value="{StaticResource DarkBackgroundColorBrush}"/>
	</Style>

</ResourceDictionary>
			