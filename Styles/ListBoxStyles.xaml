<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style x:Key="MVIListBoxStyle" TargetType="{x:Type ListBox}">
		<Setter Property="Background" Value="{StaticResource LightBackgroundColorBrush}"/>
		<Setter Property="Foreground" Value="{StaticResource DarkestForegroundColorBrush}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="BorderBrush" Value="{StaticResource DarkestBackroundColorBrush}"/>
	</Style>
  
</ResourceDictionary>