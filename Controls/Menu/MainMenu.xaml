<UserControl x:Class="MVIOperationsSystem.Controls.Menu.MVIMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVIOperationsSystem.Controls.Menu" 
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="800" MinWidth="12">
    <Grid HorizontalAlignment="Left">
        <sf:MenuAdv Background="Black" >
            <sf:MenuItemAdv Header="File" Background="Black" Foreground="White"/>
            <sf:MenuItemAdv Header="Edit" Background="Black" Foreground="White"/>
            <sf:MenuItemAdv Header="Data" Background="Black" Foreground="White"/>
                            HorizontalAlignment="Right"/>
        </sf:MenuAdv>
        <sf:MenuAdv HorizontalAlignment="Right" Height="30"  VerticalAlignment="Top" Margin="0,0,-514,-5" >
            <sf:MenuItemAdv Header="Sign In" Background="Black" Foreground="White"/>
            <sf:MenuItemAdv Header="SignOut" Background="Black" Foreground="White" />
        </sf:MenuAdv>
    </Grid>
</UserControl>
